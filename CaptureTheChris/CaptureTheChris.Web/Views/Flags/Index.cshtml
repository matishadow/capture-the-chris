@model CaptureTheChris.Web.Models.FlagsModel

<div class="container pp-container">
    <div class="text-center mt-4">
        <h2>Flags</h2>
    </div>

    <div id="flags">
        @Html.Partial("_Flags")
    </div>

    <div class="mt-lg-4">
        @using (Ajax.BeginForm("SubmitFlag", "Flags", new AjaxOptions
        {
            InsertionMode = InsertionMode.Replace,
            UpdateTargetId = "flags",
            AllowCache = true
        }, new {@class = "form", @autocomplete = "off"}))
        {
            <div class="form-group">
                <label for="flag">Wprowadź flagę. (Flagi należy zdobywać i wpisywać w formacie <b>CTC{...}</b>) </label>
                <input type="text" class="form-control" id="flag" name="flag">
            </div>
            
            <div class="form-group">
                <input class="btn btn-outline-primary btn-lg btn-block" type="submit" value="Wyślij"/>
            </div>
        }
    </div>

    <div class="row mt-lg-3">
        <div class="col">
            @Html.ActionLink("Wstecz", "Index", "Home")
        </div>
    </div>

</div>