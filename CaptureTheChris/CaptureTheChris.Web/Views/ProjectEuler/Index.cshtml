@model CaptureTheChris.ProjectEuler.IProjectEulerGame

<div class="container pp-container">
    <div class="row">
        <div class="col-md-auto">
            <img class="img-fluid" src="@Url.Content("~/content/Images/integral.png")" alt="Image"/>
        </div>
    </div>
    <div class="row text-center mt-lg-5">
        <div class="col">
            <h3>
                <b>Sprawdźmy czy jeszcze pamiętasz całki.</b>
            </h3>
        </div>
    </div>


    @using (Ajax.BeginForm("Answer", "ProjectEuler", new AjaxOptions
    {
    }, new {@class = "form"}))
    {
        <div class="form-group">
            <label for="answer">Wynik to:</label>
            <input type="text" class="form-control" id="answer" name="answer">
        </div>
        <div class="form-group">
            <input class="button" type="submit" value="Wyślij"/>
        </div>
    }

    @Html.Partial("_Flag")
</div>